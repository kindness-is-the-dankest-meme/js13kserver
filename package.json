{
  "name": "js13kserver",
  "version": "1.0.2",
  "description": "js13kgames game jam server",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "nodemon",
    "test": "mocha test",
    "lint": "eslint public --fix --max-warnings 0"
  },
  "keywords": [
    "js13kgames",
    "server"
  ],
  "engines": {
    "node": ">=8.*"
  },
  "nodemonConfig": {
    "ext": "js,mjs,ts,json,css,scss,sass,html,pug"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "mysql2": "^2.3.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "socket.io": "^4.1.3",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "es2021": true
    },
    "overrides": [
      {
        "files": [
          "public/server.js"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "public/client.js"
        ],
        "globals": {
          "io": "readonly"
        }
      }
    ]
  }
}
